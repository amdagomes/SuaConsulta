<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_dark">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/design_default_color_primary"
            android:textAlignment="center"
            app:buttonGravity="top"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextColor="@color/colorWhite">

            <ImageView
                android:id="@+id/btBack2"
                android:layout_width="27dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:onClick="carregaTelaHome"
                android:src="@drawable/icons8_left_48"
                app:layout_constraintBottom_toBottomOf="@+id/toolbarSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tituloMinhasConsultas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minhas Consultas"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:tabIndicatorColor="@color/colorWhite"
            app:tabTextColor="@color/colorWhite">

            <android.support.design.widget.TabItem
                android:id="@+id/tabAgendadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agendadas" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabListaEspera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/listaEspera" />
        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
