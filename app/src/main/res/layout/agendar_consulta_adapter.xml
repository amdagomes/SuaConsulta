<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textAgendarLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Local"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAgendarProfissional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profissional:" />

            <TextView
                android:id="@+id/textAgendarNomeMedico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:text="Nome mÃ©dico" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAgendarData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data:" />

            <TextView
                android:id="@+id/textAgendarDataConsulta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:text="11/11/2019" />

            <TextView
                android:id="@+id/textAgendarVagas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vagas:" />

            <TextView
                android:id="@+id/textAgendarNumVagas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:text="10" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnAgendarConsulta"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        app:srcCompat="@drawable/ic_arrow_right_24dp" />

</LinearLayout>