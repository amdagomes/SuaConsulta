<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="8dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/linearAuxTopo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            app:srcCompat="@color/colorGreenDarck"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGreenLight" />

        <LinearLayout
            android:id="@+id/linearTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textListEsperaTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CONSULTA EM CLINICO GERAL"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textListEsperaUnidadeSaude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome da unidade de saúde"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textListEsperaData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/retangulo_borda_redonda"
        android:gravity="center"
        android:text="AGENDADO PARA 01/01/2010"
        android:textAlignment="center"
        android:textColor="?android:attr/tooltipBackgroundColor"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutProfPosition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textListEsperaProfissional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profissional:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textListEsperaNomeMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Médico" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textListEsperaPos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posicao:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textListEsperaPosicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSairListaEspera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#c95d63"
        android:padding="10dp"
        android:text="Sair da lista"
        android:textColor="@android:color/white" />
</LinearLayout>