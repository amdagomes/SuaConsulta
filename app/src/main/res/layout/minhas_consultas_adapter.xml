<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/linearAuxTopo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGreenLight"
                app:srcCompat="@color/colorGreenDarck" />

            <LinearLayout
                android:id="@+id/linearTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textMConsultaTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CONSULTA EM CLINICO GERAL"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textMConsultaUnidadeSaude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome da unidade de saúde"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textMConsultaData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/retangulo_borda_redonda"
            android:gravity="center"
            android:text="AGENDADO PARA 01/01/2010"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textMConsultaProfissional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profissional:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textMConsultaNomeMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Médico" />

        <Button
            android:id="@+id/btnConfirmarConsulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreenDarck"
            android:padding="10dp"
            android:text="Confirmar"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnCancelarConsulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#c95d63"
            android:padding="10dp"
            android:text="Cancelar"
            android:textColor="@android:color/white"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>